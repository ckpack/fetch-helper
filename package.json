{
  "name": "@ckpack/parameter",
  "version": "2.6.1",
  "description": "JSON validator for Node.js and browser",
  "type": "module",
  "main": "es/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "keywords": [
    "fetch"
  ],
  "repository": "https://github.com/ckpack/parameter",
  "scripts": {
    "test": "jest",
    "build": "npm run build:es && npm run build:min",
    "build:es": "rm -rf ./es/* && tsc",
    "build:min": "rm -rf ./dist/* && npm run build:min:es && npm run build:min:iife",
    "build:min:es": "esbuild ./src/index.ts --bundle --minify --format=esm --outfile=./dist/index.es.js",
    "build:min:iife": "esbuild ./src/index.ts --bundle --minify --format=iife --global-name=kFetch --outfile=./dist/index.iife.js --footer:js=\"kFetch = kFetch.default;\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "release": "standard-version",
    "prepare": "husky install"
  },
  "files": [
    "dist"
  ],
  "author": "chenkai",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "esbuild": "^0.14.12",
    "eslint": "^8.7.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.2.2",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint . --ext .js,.jsx,.ts,.tsx --fix"
    ]
  },
  "dependencies": {
    "node-fetch": "^3.2.0"
  }
}
